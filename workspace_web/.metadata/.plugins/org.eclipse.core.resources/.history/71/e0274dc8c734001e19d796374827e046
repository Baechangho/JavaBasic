<title>Insert title here</title>
<script type="text/javascript">

function hello(){
	console.log('hello')
}

hello()
//-------------------------------------------------------

//1000 밀리초마다 hello함수 호출
var timer_id = setInterval(hello, 1000)

//timerid 출력
console.log(timer_id)
//-------------------------------------------------------

//3000밀리초 이후에 익명 함수를 호출한다
setTimeout(function() {
	alert('HIHI')
}, 3000)

setTimeout(() => {
	alert('hola')
}, 5000)

//-------------------------------------------------------









</script>
