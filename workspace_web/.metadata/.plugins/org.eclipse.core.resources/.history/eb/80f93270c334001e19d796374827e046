<script type="text/javascript">

//전역 변수
var result

//덧셈 함수
function add(n1, n2){
	//전역 변수에 덧셈 결과 저장하기
	result = n1 + n2;
}

//결과 출력 함수
function print(){
	console.log(result);
}

//덧셈 수행
add(445, 674);

//출력
print();

//-------------------------------------------------------

function sum(n1, n2, fn){
	
	//덧셈 수행
	var res = n1 + n2;
	
	//결과값을 이용한 함수 호출
	fn(res);
}

function display1(res) {
	console.log(res);
}

sum(123, 456)














