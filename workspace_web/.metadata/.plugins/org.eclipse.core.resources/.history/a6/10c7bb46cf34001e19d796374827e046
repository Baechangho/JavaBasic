//숫자가 한 자리일 때 앞에 '0' 붙이기
function showTime(){
	var now = new Date();
	
	var h = ('0' + now.getHours()).slice(-2)
	var m = ('0' + now.getMinutes()).slice(-2)
	var s = ('0' + now.getSeconds()).slice(-2)
	
// 	if(h<10) h = "0" + h;
// 	if(m<10) m = "0" + m;
// 	if(s<10) s = "0" + s;
	
	console.log(h + ":" + m + ":" + s);
}

setInterval(showTime, 1000);

